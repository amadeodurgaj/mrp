version: "3.9"
services:
  db:
    image: postgres:16
    container_name: mrp-postgres
    restart: always
    environment:
      POSTGRES_USER: correct_username
      POSTGRES_PASSWORD: correct_password
      POSTGRES_DB: correct_db
    ports:
      - "5432:5432"
    volumes:
      - db_data:/var/lib/postgresql/data
      - ./db/init.sql:/docker-entrypoint-initdb.d/init.sql
volumes:
  db_data:
